{
  "name": "react-d3",
  "version": "0.0.1",
  "description": "ReactJS charts using d3",
  "main": "index.js",
  "devDependencies": {
    "browserify": "~6.2.0",
    "chai": "^1.9.1",
    "envify": "~3.0.0",
    "karma": "^0.12.21",
    "karma-bro": "^0.6.2",
    "karma-chai": "^0.1.0",
    "karma-chai-plugins": "^0.2.3",
    "karma-chrome-launcher": "^0.1.4",
    "karma-firefox-launcher": "^0.1.3",
    "karma-jasmine": "^0.1.5",
    "karma-mocha": "^0.1.9",
    "karma-phantomjs-launcher": "^0.1.4",
    "mocha": "^1.21.4",
    "react-tools": "^0.11.2",
    "reactify": "~0.14.0",
    "uglifyjs": "^2.3.6",
    "watchify": "^2.1.0"
  },
  "dependencies": {
    "d3": "^3.4.13",
    "jsdom": "1.0.0"
  },
  "scripts": {
    "start": "watchify -o public/js/main.js examples/main.js & nodemon server.js",
    "build": "NODE_ENV=production browserify --standalone react-d3 -o react-d3.js ./src/index.js",
    "browserbuild": "NODE_ENV=production browserify --standalone react-d3 ./src/index.js | uglifyjs -c > react-d3.min.js",
    "test": "./node_modules/karma/bin/karma start karma.conf.js"
  },
  "author": "Eric S. Bullington",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/esbullington/react-d3-charts.git"
  },
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  }
}
